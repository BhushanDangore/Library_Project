<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bachadmin"
    tools:context="ui.AdminHome.AdminHome">


    <TextView
        android:id="@+id/text_Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="29dp"
        android:textSize="20sp" />

    <com.google.android.material.circularreveal.CircularRevealGridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="40dp">

        <ImageButton
            android:id="@+id/adddbok"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/addbook"
            android:contentDescription="TODO" />

        <ImageButton
            android:id="@+id/removebook"
            android:layout_width="180dp"
            android:layout_height="wrap_content"

            android:background="@drawable/removebook" />

        <ImageButton
            android:id="@+id/update"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_row="1"
            android:background="@drawable/update" />

        <ImageButton
            android:id="@+id/collectfine"
            android:layout_width="180dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="2dp"
            android:background="@drawable/collectfine" />

        <ImageButton
            android:id="@+id/issuedbooktouser"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_row="2"
            android:background="@drawable/issedbooktouser" />

        <ImageButton
            android:id="@+id/returnfromuser"
            android:layout_width="180dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="2dp"
            android:background="@drawable/returnformuser" />

        <ImageButton
            android:id="@+id/reissuedbook"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_row="3"
            android:background="@drawable/reissuedbook" />

    </com.google.android.material.circularreveal.CircularRevealGridLayout>

</RelativeLayout>


