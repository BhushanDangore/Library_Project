<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchBookSet"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SEARCH BOOK"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:id="@+id/bookId">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#E1D3D3"
                    android:hint="ID"
                    android:inputType="number"
                    android:textAlignment="center" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:id="@+id/booktitle">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="#E1D3D3"
                    android:hint="Title"
                    android:inputType="text"
                    android:textAlignment="center" />
            </com.google.android.material.textfield.TextInputLayout >

            <Spinner
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/spinner3"
                >

            </Spinner>


            <CheckBox
                android:layout_marginTop="10dp"
                android:id="@+id/onlyAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show only available books"/>


            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="GO"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:gravity="center"
                android:background="@drawable/btground"
                android:id="@+id/search_go_button"/>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>